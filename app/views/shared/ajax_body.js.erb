<% if defined?(@view) %>
  <% @view_path = controller.controller_name + '/' + @view %>
<% else %>
  <% @view_path = controller.controller_name + '/' + controller.action_name %>
<% end %>

$('#body_page').addClass('animated fadeOutDown')
$('#body_page').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationed animationned', function() {
  $('#body_page').html("<%= escape_javascript(render file: @view_path , locals: { articles: @articles } ) %>")
  $('#body_page').removeClass('animated fadeOutDown')
  $('#body_page').addClass('animated fadeInUp')
  $("#body_page .wysihtml5").wysihtml5()
  $("#body_page .select2").select2()
});
