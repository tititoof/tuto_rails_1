<p id="notice"><%= notice %></p>
<h1>Listing Tags</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag, role: "button", class: "btn btn-default", :remote => true %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag), role: "button", class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, role: "button", class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
