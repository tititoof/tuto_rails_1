<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article, role: "button", class: "btn btn-default", :remote => true %></td>
        <td><%= link_to 'Edit', edit_article_path(article), role: "button", class: "btn btn-primary", :remote => true %></td>
        <td><%= link_to 'Destroy', article, method: :delete, role: "button", class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Article', new_article_path, role: "button", class: "btn btn-success", :remote => true %>

